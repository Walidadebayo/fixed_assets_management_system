
<% for( const feedback of flash() ) {  %>
    <div class="alert alert-<%= feedback.type.toLowerCase() == 'error'? 'danger' : feedback.type.toLowerCase() %> alert-bs-dismissible fade show" role="alert" style="position: absolute; top: 7vh; left: 50%; transform: translateX(-50%);">
      <strong><%= feedback.type %>  </strong> <%= feedback.message %> 
      <button type="button" class="btn-close fade show" data-bs-dismiss="close" aria-label="Close">
          
          <% console.log(feedback.message); %>
        </button>
        </div>
        <% } %>
   <%# script %> 
    <% if (locals.formErrors) { %>
        <% for (const name in locals.formBody) {
            const value = locals.formBody[name]; %>
                var input = document.querySelector('[name=<%- name %>]')
                if (input.type == "radio") {
                    $('[name=<%- name %>][value=<%- value %>]').prop('checked', true)
                }else{
                    input.value= "<%- value %>"
                }
        <% } %>
    
        <% for (const name in locals.formErrors) {
            const msg = locals.formErrors[name].msg; %>     
            document.querySelector('[name=<%- name %>]')?.classList.add('is-invalid') 
            $('[name=<%- name %>]').parent().append('<div class="alert mt-4 alert-danger"><%= msg %></div>')
        <% } %>
    <% } %>   
